pipeline {
  agent any
   tools {
    jdk 'JDK'
   }
   environment {
    GROOVY_HOME = tool name: 'Groovy', type: 'hudson.plugins.groovy.GroovyInstallation'
}
  options {
        timestamps()
    }
  stages{
    stage('Shared Library') {
              steps {
	       sh "ls"
	       if(isUnix())
	       {
	       sh "${GROOVY_HOME}/bin/groovy TestClass.groovy"
	       }
	       else
	       {
	       bat "${GROOVY_HOME}/bin/groovy TestClass.groovy"
	       }
   	     }
          }
     
       }

} 
